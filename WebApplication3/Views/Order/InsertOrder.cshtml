@model WebApplication3.Models.Order
@{
    Layout = null;
}
@using (Html.BeginForm("InsertOrder", "Order", FormMethod.Post, new { id = "Form1" }))
{
    <head>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    </head>
    <table class="table table-bordered">
        <tr>
            <td>ID</td>
            <td>@Html.TextBoxFor(model => model.CustomerID)</td>
        </tr>
        <tr>
            <td>名稱</td>
            <td>@Html.TextBoxFor(model => model.CompanyName)</td>
        </tr>
        <tr>
            <td>聯絡人姓名</td>
            <td>@Html.TextBoxFor(model => model.ContactName)</td>
        </tr>
        <tr>
            <td>聯絡人職稱</td>
            <td>@Html.TextBoxFor(model => model.ContactTitle)</td>
        </tr>
        <tr>
            <td>建立日期</td>
            <td>@Html.TextBoxFor(model => model.CreationDate, new { @type = "date" })</td>
        </tr>
        <tr>
            <td>國家</td>
            <td>@Html.TextBoxFor(model => model.Country)</td>
        </tr>
        <tr>
            <td>區域</td>
            <td>@Html.TextBoxFor(model => model.Region)</td>
        </tr>
        <tr>
            <td>郵遞區號</td>
            <td>@Html.TextBoxFor(model => model.PostalCode)</td>
        </tr>
        <tr>
            <td>地址</td>
            <td>@Html.TextBoxFor(model => model.Address)</td>
        </tr>
        <tr>
            <td>電話</td>
            <td>@Html.TextBoxFor(model => model.Phone)</td>
        </tr>
        <tr>
            <td>傳真</td>
            <td>@Html.TextBoxFor(model => model.Fax)</td>
        </tr>
            <td></td>
            <td>
                <input type="submit" value="存檔" />
                @Html.ActionLink("回前一頁", "Index")
            </td>

        </tr>
    </table>
}